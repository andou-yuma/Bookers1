<h1>Books</h1>

<table>
 <thead>
  <tr>
  <th>Title</th>
  <th>Body</th>
   <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
   <tr>
    <span><th><%= book.title %></th></span>
    <span><th><%= book.body %></th></span>
    <th><%= link_to "Show","/books/#{book.id}" %></th>
    <th><%= link_to "Edit",edit_book_path(book.id)  %></th>
    <th><%= link_to "Destroy",book_path(book),method: :delete,data: {confirm: "削除しますか？"} %></th>
  </tr>
 <% end %>
</thead>
</table>



<%= form_with model:@book,url:'/books/',local:true do |f| %>

<h2>New book</h2>
<% if @book.errors.any? %>
<p class="error">error</p>
<% @book.errors.full_messages.each do |message| %>
 <div class="form-error">
  <%= message %>
 </div>
<% end %>
<% end %>
<h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_field :body %>
 <%= f.submit %>
 
<% end %>
