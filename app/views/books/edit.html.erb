<h1>Editing Book</h1>
<% if @book.errors.any? %>
<p class="error">error</p>
<% @book.errors.full_messages.each do |message| %>
   <div class="form-error">
   <%= message %>
   </div>
<% end %>  
<% end %>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>


    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>


<% end %>

